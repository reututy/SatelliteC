                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Content="Current in:" Grid.Row="0" Grid.Column="0"/>
            <TextBlock x:Name="currInText" Grid.Row="0" Grid.Column="1" Text="{Binding current_in, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Current out:" Grid.Row="1" Grid.Column="0"/>
            <TextBlock x:Name="currOutText" Grid.Row="1" Grid.Column="1" Text="{Binding current_out, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
